{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es5",
      "es2015.promise",
      "es2016.array.include"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  },
  "compileOnSave": false,
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
